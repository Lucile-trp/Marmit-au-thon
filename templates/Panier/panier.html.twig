{% extends 'base.html.twig' %}

{% block title 'Panier' %}

{% block css %}
    <link rel="stylesheet" href="/assets/panier.css">
{% endblock %}

{% block body %}
    <div class="content">
    <h1>Votre Panier :)</h1>
        <hr>
    {% if panier is defined and panier is not empty%}
        {% for data in panier %}
            <h2 class="title-recette">Nom de la recette : {{ data.recname }}</h2>
            <h6 class="list-ing-panier">Les ingredients :</h6>
            <table class="tableau-ing" rules=all>
                <tr class="first-row-tableau">
                    <th class="tableau-box">Ingrédient</th>
                    <th class="tableau-box">Quantité</th>
                    <th class="tableau-box">Checked</th>
                </tr>
            {% for ingredient in data.ingredient %}
                <tr class="other-row-tableau">
                    <td class="tableau-box">{{ ingredient.ingname }}</td>
                    <td class="tableau-box">{{ ingredient.joinquantite }} {{ ingredient.uniname }}</td>
                    <td class="tableau-box"> <input type="checkbox"></td>
                </tr>
            {% endfor %}
            </table>
            <a class="lien-resetOne-panier" href="/Panier/unsetOne/{{ data.id }}">Enlever cette recette du panier</a>
            <hr>
        {% endfor %}
    {% else %}
        <h2>Votre panier est vide.</h2>
    {% endif %}
        <a class="lien-reset-panier" href="/Panier/resetPanier"> Réinitialiser le panier</a>
    </div>
{% endblock %}